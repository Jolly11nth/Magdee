{
  "name": "magdee",
  "version": "1.0.0",
  "description": "Magdee - PDF to Audio conversion app with Python FastAPI backend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "echo 'Skipping frontend build for backend-only deployment'",
    "preview": "vite preview",
    "python:start": "./start-python-backend.sh",
    "python:dev": "source venv/bin/activate && python -m app.main",
    "dev:all": "concurrently \"npm run dev\" \"npm run python:start\"",
    "setup:python": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "lint": "eslint . --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "pdf",
    "audio",
    "tts",
    "conversion",
    "react",
    "fastapi",
    "python"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^4.3.9",
    "typescript": "^5.0.0",
    "concurrently": "^8.2.0"
  }
}
